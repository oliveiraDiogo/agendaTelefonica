@model Diogo.AT.Domain.Contato.EmailMO

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Adicionar email ao contato</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger text-alerta" })

        <div class="row col-6">
            <div class="col-lg-11 mb-3">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger text-alerta" })
                </div>
            </div>
        </div>

        <div class="row col-6">
            <div class="col-lg-11 mb-3">
                @Html.Label("Classificação", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EnumDropDownListFor(model => model.Classificacao, "Selecione...", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Classificacao, "", new { @class = "text-danger text-alerta" })
                </div>
            </div>

        </div>

        <div class="row col-6">
            <div class="col-md-8 mb-3">
                @Html.ActionLink("Adicionar telefones", "Create", "Telefone", new { idContato = ViewBag.IdContato }, htmlAttributes: new { @class = "btn btn-default float-right" })
            </div>
            <div class="col-md-3 mb-3">
                <input type="submit" value="Adicionar" class="btn btn-primary float-right" />
                <input type="hidden" value="@ViewBag.IdContato" name="IdContato" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-11 mb-3">
                @Html.ActionLink("Listar os meus contatos", "Index","Contato","", htmlAttributes: new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}
